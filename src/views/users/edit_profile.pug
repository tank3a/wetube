extends ../base

block content 
    if(errorMessage)
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        input(type="text", required, name="username", placeholder="Username", value=loggedInUser.username)
        input(type="text", required, name="name", placeholder="Name", value=loggedInUser.name)
        input(type="text", name="location", placeholder="location", value=loggedInUser.location)
        img(src="/" + loggedInUser.avatarUrl, width="130px", height="180px")
        label(for="avatar") Avatar 
            input(type="file", id="avatar", name="avatar", accept=".jpeg, .png, .jpg")
        input(type="submit", value="Update Profile")

        if(!loggedInUser.socialLogin)
            hr
            a(href="change_password") Change Password &rarr;