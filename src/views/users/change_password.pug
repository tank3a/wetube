extends ../base

block content
    if(errorMessage)
        span=errorMessage
    form(method="POST")
        input(placeholder="Old Password", required, name="old_password", type="password")
        input(placeholder="New Password", required, name="new_password", type="password")
        input(placeholder="Confirm Password", required, name="confirm_password", type="password")
        input(type="submit", value="Change Password")
