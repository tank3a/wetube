extends ../base

block content
    div.video
        div.video_video
            video(src="/" + video.fileUrl)
            button#play Play 
            button#mute Mute
            input(type="range", step="0.1", min=0, max=1, value=1)#volume
            div 
                span#currentTime 0:00
                span  / 
                span#totalTime 00:00
            div 
                input(type="range", step=0.1, min=0, value=0)#timeLine
            div 
                button#fullScreen Enter Full Screen

        //-
            div.video_content
                div.video_content__titlepart
                    each hashtag in video.hashtags
                            span #{hashtag} 
                    h2=video.title
                    small #{video.meta.views} Views â€¢ #{video.createdAt.toDateString()}
                
                div.video_content__creatorpart
                    include ../partials/avatar
                    h2 
                        a(href=`/users/${video.owner._id}`) #{video.owner.name} 
                p=video.description

            if String(video.owner.id) === String(loggedInUser._id)
                div.video_creater_editpart
                    a(href=`${video.id}/edit`) Edit Video
                    a(href=`${video.id}/delete`) Delete Video

block scripts 
    script(src="/assets/js/videoPlayer.js")